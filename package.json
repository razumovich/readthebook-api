{
  "name": "readthebook-api",
  "description": "Serverless API for 'Read The Book' client",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:razumovich/read-the-book-api.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./services/*"
  ],
  "scripts": {
    "start:products": "yarn workspace products start",
    "start:import": "yarn workspace import start",
    "start:auth": "yarn workspace authorization start",
    "start": "concurrently \"yarn start:products\" \"yarn start:import\" \"yarn start:auth\"",
    "deploy:products": "yarn workspace products deploy",
    "deploy:import": "yarn workspace import deploy",
    "deploy:auth": "yarn workspace authorization deploy",
    "deploy": "yarn deploy:auth && yarn deploy:products && yarn deploy:import",
    "clean:products": "yarn workspace products clean",
    "clean:import": "yarn workspace import clean",
    "clean:auth": "yarn workspace authorization clean",
    "clean": "yarn clean:products && yarn clean:import && yarn clean:auth"
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
